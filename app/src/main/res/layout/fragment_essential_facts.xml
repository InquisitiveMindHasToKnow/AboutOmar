<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EssentialFactsFragment">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/essential_facts_imageview"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/csimage"/>


            <TextView
                android:id="@+id/ef_description_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Now we’re all familiar with the many dating applications out there, whether it’s Tinder, OKCupid, Bumble, Happn, just to name a few. Although they’re all good in their own ways, Cupid Shuffle takes what they all do well but goes a step further. Cupid Shuffle not only helps users find their perfect matches, it gives them the ability to select a date and time for their potential outings. Game changer! \n\n Gone are the days of:  \n\nQuestion: “What do you want to do?” \n Response: “I don’t know. What do you want to do?” \n\n  Found a match? Pick from an assortment of date locations based on similar interests, pick a date and time, and you're on your way!  "
                app:layout_constraintTop_toBottomOf="@id/cupid_shuffle_imageview"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="32dp"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >


                        <ImageView
                            android:id="@+id/ef_main_page_imageview"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/essential_facts_main_page"/>

                        <ImageView
                            android:id="@+id/ef_about_imageview"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/essential_facts_about"/>

                        <ImageView
                            android:id="@+id/ef_rules_imageview"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/essential_facts_rules" />

                        <ImageView
                            android:id="@+id/ef_study_imageview"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/essential_facts_study"/>

                        <ImageView
                            android:id="@+id/ef_study_with_audio_imageview"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/essential_facts_study_with_audio"/>

                        <ImageView
                            android:id="@+id/ef_trivia_imageview"
                            android:layout_width="104dp"
                            android:layout_height="104dp"
                            android:layout_marginTop="16dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/essential_facts_trivia"/>

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <Button
                android:id="@+id/ef_link_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:background="@drawable/roundedbuttons"
                android:textColor="@color/textColor"
                android:layout_marginBottom="24dp"
                android:text="   Source Code   "
                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>