<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AboutMe">

    <View
        android:layout_width="412dp"
        android:layout_height="160dp"
        android:background="#00796b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/descriptive_words_view_flipper"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Reliable"
                    android:textStyle="bold|italic"
                    android:textSize="40sp" />

        </ViewFlipper>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="\t \t I've been interested in Android Development for about as long as I can remember. Growing up, I was always fascinated by the joy games and applications brought to people and how much easier they made their lives.  "
            />




    </LinearLayout>
</android.support.constraint.ConstraintLayout>